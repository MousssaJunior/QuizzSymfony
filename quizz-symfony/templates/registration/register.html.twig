{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}

                    <div class="form-group">
                        {{ form_label(registrationForm.y) }}
                        {{ form_widget(registrationForm.y, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.y) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword, 'Password') }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-group form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

