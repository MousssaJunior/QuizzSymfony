{% extends 'base.html.twig' %}

{% block title %}Question Pannel{% endblock %}

{% block body %}
 <a href="{{ path('app_admin') }}" class="btn btn-primary btn-lg">Retour</a>

    <h1>Question Pannel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_categorie</th>
                <th>Question</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.idCategorie }}</td>
                <td>{{ question.question }}</td>
                <td>
                    <a href="{{ path('app_adminquestion_show', {'id': question.id}) }}"class="btn btn-info btn-xs">show</a>
                    <a href="{{ path('app_adminquestion_edit', {'id': question.id}) }}"class="btn btn-warning btn-xs">edit</a>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adminquestion_new') }}"class="btn btn-success btn-lg">Create new</a>
{% endblock %}
