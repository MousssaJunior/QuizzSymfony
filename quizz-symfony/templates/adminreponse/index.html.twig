{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>
    
      <a href="{{ path('app_admin') }}" class="btn btn-secondary mt-5">
                <i class="fas fa-arrow-left"></i> Retour 
            </a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_question</th>
                <th>Reponse</th>
                <th>Reponse_expected</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.idQuestion }}</td>
                <td>{{ reponse.reponse }}</td>
                <td>{{ reponse.reponseExpected }}</td>
                <td>
                    <a href="{{ path('app_adminreponse_show', {'id': reponse.id}) }}"class="btn btn-info btn-xs">show</a>
                    <a href="{{ path('app_adminreponse_edit', {'id': reponse.id}) }}"class="btn btn-warning btn-xs">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adminreponse_new') }}" class="btn btn-success btn-xs">Create new</a>
{% endblock %}
