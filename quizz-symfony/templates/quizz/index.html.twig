{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Quizz Time</h1>
    <form method="post" action="/reponse_back">
        <ul class="list-group">
            {% for question in questions %}
                <div class="card mb-3">
                    <div class="card-body">
                        <li class="list-group-item">
                            <h5>{{ question.question }}</h5>
                            {% for reponse in reponses %}
                                {% if question.id == reponse.IdQuestion %}
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="radio{{ loop.index }}" name="question[{{ question.id }}]" value="{{ reponse.id }}">
                                        <label class="form-check-label" for="radio{{ loop.index }}">
                                            {{ reponse.getReponse }}
                                        </label>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </li>
                    </div>
                </div>
            {% endfor %}
        </ul>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary">Valider</button>
        </div>
    </form>
</div>
    
    <div class="mt-4">
        {# <a href="{{ path('admin_panel') }}" class="btn btn-outline-primary me-3">Admin</a> #}
        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
    </div>
</div>
{% endblock %}
